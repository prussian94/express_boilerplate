{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"baseUrl": "./",
		"paths": {
			"@controllers/*": ["src/controllers/*"],
			"@enums/*": ["src/enums/*"],
			"@exceptions/*": ["src/exceptions/*"],
			"@helpers/*": ["src/helpers/*"],
			"@models/*": ["src/models/*"],
			"@services/*": ["src/services/*"],
			"@utils/*": ["src/utils/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@routes/*": ["src/routes/*"],
			"@config/*": ["src/config/*"]
		}
	},

	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
